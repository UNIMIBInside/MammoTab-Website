---
type Prop = {
  href?: string;
  variant?: "primary" | "secondary" | "disabled";
  className?: string;
};
const { href = "#", variant = "primary", className } = Astro.props;
---

<a
  href={href}
  class:list={[
    "inline-flex items-center px-4 py-2 text-sm font-bold rounded-lg transition-colors",
    variant === "primary"
      ? "bg-purple-500 hover:bg-purple-500/80"
      : "bg-purple-700 hover:bg-purple-700/80 saturate-50",
    variant === "disabled"
      ? "cursor-not-allowed"
      : "",
    className,
  ]}
>
  <slot />
</a>
